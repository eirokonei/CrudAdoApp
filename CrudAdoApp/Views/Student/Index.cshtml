@model List<CrudAdoApp.Models.Student>

<h2>Student List</h2>
<a href="/Student/Create" class="btn btn-primary mb-3">Add New Student</a>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Age</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Name</td>
                <td>@s.Email</td>
                <td>@s.Age</td>
                <td>
                    <a href="/Student/Edit/@s.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/Student/Delete/@s.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this student?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
